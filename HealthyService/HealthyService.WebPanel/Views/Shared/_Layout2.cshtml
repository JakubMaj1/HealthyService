<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthyService.WebPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/assets/css/colors.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap_limitless.css" />
    <link rel="stylesheet" href="~/assets/css/components.css" />
    <link rel="stylesheet" href="~/assets/css/layout.css" />
    <link rel="stylesheet" href="~/global_assets/css/icons/icomoon/styles.min.css" />
</head>
<body class="mr-1">
    <div class="navbar navbar-light navbar-expand-md">
        <div class="navbar-brand">
            <a asp-area="Dashboard" asp-controller="Home" asp-action="UserDashboard" class="d-inline-block" style="color:white;">
                <i class="icon-home"></i> Healthy Service
            </a>
        </div>

        <div class="d-md-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
                <i class="icon-tree5"></i>
            </button>
            <button class="navbar-toggler sidebar-mobile-main-toggle" type="button">
                <i class="icon-paragraph-justify3"></i>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="navbar-mobile">
            @*<ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="navbar-nav-link sidebar-control sidebar-main-toggle d-none d-md-block">
                            <i class="icon-paragraph-justify3"></i>
                        </a>
                    </li>
                </ul>*@

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a asp-area="Products" asp-controller="Home" asp-action="Index" class="navbar-nav-link">
                        <i class="icon-user-block"></i> Admin Produkt
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Diary" asp-controller="Home" asp-action="FoodDiary" class="navbar-nav-link">
                        <i class="icon-book2"></i> Dziennik
                    </a>
                </li>

                <li class="nav-item">

                    <a asp-area="Training" asp-controller="Home" asp-action="PrimaryTraining" class="navbar-nav-link d-flex align-items-center">
                        <i class="icon-folder-heart"></i>  Trening
                    </a>

                </li>

                <li class="nav-item">

                    <a asp-area="Calculators" asp-controller="Home" asp-action="PrimaryCalculators" class="navbar-nav-link d-flex align-items-center">
                        <i class="icon-calculator2"></i>  Kalkulatory
                    </a>

                </li>


                <li class="nav-item dropdown">
                    <a href="#" class="navbar-nav-link">
                        <i class="icon-bell3"></i>
                        <span class="d-md-none ml-2">Notifications</span>
                        <span class="badge badge-mark border-white ml-auto ml-md-0"></span>
                    </a>
                </li>


                <li class="nav-item dropdown dropdown-user">
                    <a href="#" class="navbar-nav-link d-flex align-items-center dropdown-toggle" data-toggle="dropdown">
                        <img src="../../../img/Kuba.jpg" class="rounded-circle mr-2" height="34" alt="">
                        <span>Kuba</span>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" class="dropdown-item"><i class="icon-user-plus"></i> Moje konto</a>
                        <a href="#" class="dropdown-item"><i class="icon-book"></i> Dziennik</a>
                        <a href="#" class="dropdown-item"><i class="icon-comment-discussion"></i> Wiadomości</a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item"><i class="icon-cog5"></i> Ustawienia</a>
                        <a class="dropdown-item" asp-area="Account" asp-controller="Home" asp-action="Logout"><i class="icon-switch2"></i> Wyloguj się</a>

                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="navbar navbar-expand-md navbar-dark">


        <div class="navbar-collapse collapse" id="navbar-second">
            <ul class="navbar-nav">
                <li class="nav-item p-2 ">
                    Kalorie   <br />
                    <span class="badge badge-pill bg-teal-800 position-static ml-auto ml-md-1 font-size-lg">2500 kcal</span>

                </li>
                <li class="nav-item p-2">
                    <i>Białko</i> <br />
                    <span class="badge badge-pill bg-primary-700 position-static ml-auto ml-md-1 font-size-lg">200 g</span>
                </li>
                <li class="nav-item p-2">
                    <i>Węglowodany</i> <br />
                    <span class="badge badge-pill bg-primary-800 position-static ml-auto ml-md-1 font-size-lg">200 g</span>

                </li>
                <li class="nav-item p-2">
                    <i>Tłuszcze</i> <br />
                    <span class="badge badge-pill bg-primary-700 position-static ml-auto ml-md-1 font-size-lg">200 g</span>

                </li>
            </ul>

            <ul class="navbar-nav ml-md-auto">
                <li class="nav-item">
                    <a asp-area="Users" asp-controller="Home" asp-action="MacroKcalAdd" class="navbar-nav-link">
                        <i class="icon-pencil3 mr-2"></i>
                        Edytuj
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/global_assets/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/global_assets/js/demo_pages/form_select2.js"></script>

    <script src="~/assets/js/app.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/healthy.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
