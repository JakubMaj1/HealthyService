@model  HealthyService.WebPanel.Areas.Account.Model.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

    <div class="bg-gradient-primary ">
        <div class="container">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block" style=" background-image: url('../../img/Login.jpg'); background-position: center; background-size: cover;"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Stwórz konto</h1>
                                        </div>
                                        <form asp-area="Account" asp-controller="Home" asp-action="RegisterUser" method="post" class="form-validate-jquery user" autocomplete="on" role="form">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" asp-for="Name" class="form-control form-control-user" placeholder="Imię">
                                                    <span asp-validation-for="Name"></span>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" asp-for="SureName" class="form-control form-control-user" placeholder="Nazwisko">
                                                    <span asp-validation-for="SureName"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Adres E-mail">
                                                <span asp-validation-for="Email"></span>

                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Hasło">
                                                    <span asp-validation-for="Password"></span>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Powtórz Hasło">
                                                    <span asp-validation-for="ConfirmPassword"></span>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Załóż Konto
                                            </button>
                                            <hr>
                                            
                                        </form>
                                        <div class="text-center">
                                            <a asp-area="Account" asp-controller="Home" asp-action="Login" class="small" >Masz konto? Zaloguj się</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



