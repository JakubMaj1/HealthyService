@model List<HealthyService.Core.Database.Tables.Product>
@{
    ViewData["Title"] = "AdminAddProduct";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container pt-3">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Lista Produktów</h5>
            <div class="header-elements">
                <div class="list-icons">
                    @*<a class="list-icons-item" data-action="remove"></a>*@
                </div>
            </div>
        </div>

        <div class="card-body">
            <a  asp-area="Products" asp-controller="Home" asp-action="AdminAddProduct" class=" left mr-auto text-primary" style="font-size:18px;">Dodaj produkt <i class="icon-plus-circle2 "></i></a>
        </div>

        <table class="table datatable-basic">
            <thead>
                <tr>
                    <th>Nazwa Produktu</th>
                    <th>Jednostka</th>
                    <th>Białko</th>
                    <th>Węglowodany</th>
                    <th>Tłuszcze</th>
                    <th>Status</th>
                    <th class="text-center">Edytuj/Ukryj</th>
                </tr>
            </thead>
            
            @{

                foreach (var product in Model)
                {
                    <tbody>
                    <td>@product.Name</td>
                    <td>
                        @{ 
                            if (@product.ProductMeasure !=HealthyService.Core.Database.Types.ProductMeasureType.Piece)
                            {
                                    <div>100g</div>
                            }
                            else
                            {
                                    <div>1 szt</div>
                            }
                        }
                    </td>
                    <td>@product.Protein</td>
                    <td>@product.Carbo</td>
                    <td>@product.Fat</td>
                    <td>
                        @{
                            if (product.IsActive != true)
                            {
                                <span class="badge badge-danger">Ukryty</span>

                            }
                            else
                            {
                                <span class="badge badge-success">Widoczny</span>
                            }
                        }
                    </td>
                    <td class="text-center">
                        <a asp-area="Products" asp-controller="Home" asp-action="EditProduct" asp-route-productId="@product.Id"><span class="icon-pen6 text-black"></span></a>
                        <a href=""><span class="icon-blocked text-black"></span></a>

                    </td>
                    
                    </tbody>
                }
            }

        </table>
    </div>
</div>
<div id="modal_AddProductDatabase" class="modal fade" tabindex="-1">
    
</div>